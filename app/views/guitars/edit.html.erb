<div class="container mt-3">
  <h1>Edit Guitar</h1>
   <%= simple_form_for @guitar do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :caption %>
    <%= f.input :description %>
    <%= f.input :cost_per_day %>
    <%= f.input :guitar_type %>
    <% if @guitar.photos.empty? %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <% end %>
    <%= f.submit %>
  <% end %>
</div>
