<div id="guitars" class="container mt-4">
  <div class="row">

    <div class="d-flex justify-content-between">
      <h1>GUITARS</h1>
      <% if user_signed_in? %>
        <p><%= link_to "Add Guitar", new_guitar_path, class: "btn btn-secondary" %></p>
      <% end %>
    </div>

    <div class="search-container">
      <%= form_with url: guitars_path, method: :get, class: "d-flex mb-3" do %>
        <%= text_field_tag :query,
          params[:query],
          id: "search",
          class: "form-control",
          placeholder: "Search..."
        %>
        <%= submit_tag "Search", class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>

  <%= render 'guitars/guitars', guitars: @guitars %>

</div>
<%# MAP %>
<div class="container">
  <div class = "col-sm" style="width: 100%; height: 450px; border: 5px solid black"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
