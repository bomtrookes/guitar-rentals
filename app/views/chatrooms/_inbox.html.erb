<div>
  <div class="d-flex justify-content-between p-2">
    <h3>Inbox</h3>
    <input type="text" placeholder="Search Inbox..." style="width:50%">
  </div>

  <div class="inbox-container">
    <% if @chatrooms.present? %>
    <% @chatrooms.each do |chatroom| %>
      <%= link_to guitar_chatroom_path(chatroom.guitar, chatroom) do %>

        <div class="inbox">
          <span class="user"><%= chatroom.guitar.user.first_name %></span>
          <span class="subject"><%= chatroom.guitar.name %>
            <span class="message"> - <%= chatroom.messages.last.content %></span>
          </span>
          <span class="date"><%= chatroom.latest_message %></span>
        </div>

      <% end %>
    <% end %>
    <% else %>
    <div class="no-content">
      <p>You have no messages</p>
    </div>
    <% end %>

  </div>
</div>
