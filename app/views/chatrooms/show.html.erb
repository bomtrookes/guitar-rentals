<div id="session" class="mt-3 mb-4" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">

  <div class="inbox-search">
    <input type="text" placeholder="Search">
  </div>

  <div class="user-info">
    <h6><%= @chatroom.user2.first_name %> - <%= @chatroom.guitar.name %></h6>
  </div>

  <div class="side">
    <%= render partial: 'messages_inbox' %>
  </div>

  <div class="messages" data-chatroom-subscription-target="messages" %>
    <%#= render partial: 'messages/message', collection: @chatroom.messages.order(created_at: :asc) %>
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>

  <%= render partial: 'messages/form' %>
</div>
