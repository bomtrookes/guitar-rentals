<div id="session" class="mt-3 mb-5" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">
  <div id="side-inbox">
    <h6>Inbox</h6>
  </div>
  <div class="messages" data-chatroom-subscription-target="messages" %>
    <%#= render partial: 'messages/message', collection: @chatroom.messages.order(created_at: :asc) %>
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>

  <%= render partial: 'messages/form' %>
</div>
