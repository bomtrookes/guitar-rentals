<div class="container mt-3 mb-5" data-controller="messages chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">

  <div class="messages" data-messages-target="items" data-chatroom-subscription-target="messages" %>">
    <%#= render partial: 'messages/message', collection: @chatroom.messages.order(created_at: :asc) %>
    <% @chatroom.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>

  <%= render partial: 'messages/form' %>
</div>
