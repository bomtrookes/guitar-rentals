<div class="container mt-4">
  <div class="row">

    <div class="d-flex justify-content-between mb-3">
      <h1>FAVOURITES</h1>
    </div>

    <div class="search-container" style="display:none;">
      <%= form_with url: guitars_path, method: :get, class: "d-flex mb-3" do %>
        <%= text_field_tag :query,
          params[:query],
          id: "search",
          class: "form-control",
          placeholder: "Search..."
        %>
        <div class="clear-button">Clear</div>
      <% end %>
    </div>

    <% if @favourites %>
    <% @favourites.each do |favourite| %>
      <%= link_to guitar_path(favourite.guitar, anchor: "guitar-#{favourite.guitar.id}"), class: "card-col col-lg-4 col-md-6 mb-4" do %>

        <div class="g-card selected">
          <div class="g-card-image">
            <% if favourite.guitar.photos.attached? %>
              <%= cl_image_tag favourite.guitar.photos.first.key %>
            <% else %>
              <p>no img available</p>
            <% end %>
          </div>
          <div class="g-txtbox">
            <h6 class="g-card-name"><%= truncate(favourite.guitar.name, length: 27, seperator: ' ') %></h6>
            <p class="g-card-rating"><%= favourite.guitar.average_rating %></p>
            <p class="g-card-type"><%= favourite.guitar.guitar_type %></p>
            <p class="g-card-price">Â£<%= favourite.guitar.cost_per_day %>0 per night</p>
          </div>
        </div>

      <% end %>
    <% end %>

    <% else %>
      <p>You have no favourites yet</p>
    <% end %>

  </div>
</div>
