<div id="favourite-guitars" class="container mt-4">
  <div class="row">

    <div class="d-flex justify-content-between mb-3">
      <h1>FAVOURITES</h1>
    </div>

    <% if @favourites.present? %>

    <div class="search-container">
      <%= form_with url: guitars_path, method: :get, class: "d-flex mb-3" do %>
        <%= text_field_tag :query,
          params[:query],
          id: "search",
          class: "form-control",
          placeholder: "Search..."
        %>
        <div class="clear-button">Clear</div>
      <% end %>
    </div>

    <% @favourites.each do |favourite| %>
      <%= link_to guitar_path(favourite.guitar), class: "col-md-4 col-sm-6 col-12" do %>

        <div class="g-card selected">
          <div class="g-card-image">
            <% if favourite.guitar.photos.attached? %>
              <%= cl_image_tag favourite.guitar.photos.first.key, loading: "lazy" %>
            <% else %>
              <p>no img available</p>
            <% end %>
          </div>
          <div class="g-txtbox">
            <h6 class="g-card-name"><%= truncate(favourite.guitar.name, length: 27, seperator: ' ') %></h6>
            <p class="g-card-rating"><%= favourite.guitar.average_rating %></p>
            <p class="g-card-type"><%= favourite.guitar.guitar_type %></p>
            <p class="g-card-price">Â£<%= favourite.guitar.cost_per_day %> per night</p>
          </div>
        </div>

      <% end %>
    <% end %>

    <% else %>
      <div class="no-content">
        <p>You have no favourites yet</p>
        <%= link_to "Browse Guitars", guitars_path %>
      </div>
    <% end %>

  </div>
</div>
