<%= form_with(model: [@chatroom.guitar, @chatroom, @chatroom.messages.build],
html: {
  data: { action: "turbo:submit-end->chatroom-subscription#resetForm" },
  url: guitar_chatroom_messages_path(@chatroom.guitar, @chatroom),
  method: :post,
  remote: true }) do |form| %>
    <div class="field mt-3">
      <%= form.text_area :content, placeholder: "Type your message here..." %>
    </div>
    <div class="actions">
      <%= form.submit "Send" %>
    </div>
  <% end %>
